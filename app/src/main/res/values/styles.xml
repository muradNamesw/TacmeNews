<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <!-- Status & ActionBar Styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cookieTitleColor">@color/default_title_color</item>
        <item name="cookieMessageColor">@color/default_message_color</item>
        <item name="cookieActionColor">@color/default_action_color</item>
        <item name="cookieBackgroundColor">@color/redDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppThemeNoStatusBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/login_header</item>
        <item name="colorPrimaryDark">@color/login_header</item>
        <item name="colorAccent">@color/login_header</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TransparentStyle" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/silver</item>
    </style>

    <style name="TransparentStyleAll" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppFullScreenStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentStatusStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="WhiteStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="PurpleStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/purple</item>
    </style>

    <style name="OrangeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/warmOrange</item>
        <item name="colorPrimaryDark">@color/warmOrange</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/warmOrange</item>
    </style>

    <style name="DarkBlueStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
    </style>

    <style name="GreenBlueStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/greenBlue</item>
        <item name="colorPrimaryDark">@color/greenBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/greenBlue</item>
    </style>
    <!--
        <item name="android:statusBarColor">@color/statusBarBGColor</item>
        <item name="android:windowLightStatusBar">true</item>
    -->


    <!-- Themes -->

    <style name="MainTheme"></style>

    <style name="MainTheme.layout">
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>


    <style name="Progressbar.ColorAccent" parent="AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Progressbar.ColorPrimary" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_dialog</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/up_dialog</item>
        <item name="android:windowExitAnimation">@anim/down_dialog</item>
    </style>

    <style name="BaseDialogTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="BaseCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">15dp</item>

        <item name="android:elevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="LinearLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="RelativeLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalLinearLayout" parent="LinearLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalLinearLayout" parent="LinearLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListHeading">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textColor">@color/detailsItemLabelColor</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="ListValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">@color/detailsItemValueColor</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CardStatusImageView">
        <item name="android:layout_width">@dimen/value80</item>
        <item name="android:layout_height">@dimen/value80</item>
        <item name="android:padding">@dimen/value7</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_gravity">top</item>

    </style>

    <style name="CardStatusTextView">
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small_plus</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>


    <style name="ImageView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="mainSubMenuImageView" parent="AppTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">9dp</item>
    </style>

    <style name="mainSubMenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileItemImageView">
        <item name="android:layout_width">@dimen/value50</item>
        <item name="android:layout_height">@dimen/value50</item>
        <item name="android:padding">@dimen/value15</item>
    </style>

    <style name="ProfileLinearLayout" parent="HorizontalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/value10</item>
        <item name="android:layout_marginEnd">@dimen/value10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#2A2E43</item>
    </style>


    <style name="image_view" parent="AppTheme">
        <item name="android:rotation">@integer/gravity_image</item>
        <!--<item name="android:lineSpacingExtra">@dimen/marginMinus6</item>-->

    </style>

    <style name="LineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_back</item>
        <item name="android:layout_marginStart">@dimen/value10</item>
        <item name="android:layout_marginEnd">@dimen/value10</item>
    </style>

    <style name="ProfileTitleTextView" parent="BaseTextView">
        <item name="android:layout_width">@dimen/value0</item>
        <item name="android:layout_height">@dimen/value50</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="BaseTextView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inputForm" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value50</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/value10</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="BaseCardViewDriver" parent="AppTheme">
        <item name="android:elevation">@dimen/value0</item>
        <item name="cardBackgroundColor">#F7F8FA</item>
        <item name="cardCornerRadius">@dimen/value3</item>
        <item name="cardMaxElevation">@dimen/value6</item>
        <item name="cardCornerRadius">@dimen/value21</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
